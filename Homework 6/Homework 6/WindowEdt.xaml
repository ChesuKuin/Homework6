<Window x:Class="Homework_6.WindowEdt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_6"
        mc:Ignorable="d"
          Title="WindowEdt" Height="450" Width="450">
    <StackPanel x:Name="mainStackPanel">
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="25"/>
        <TextBox Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="25"/>
        <TextBox Text="{Binding Departament}" Margin="5" FontSize="25"/>
        <Button x:Name="btnOk" Content="Ок" Margin="5"  FontSize="25"/>
        <Button x:Name="btnCancel" Content="Отмена" Margin="5"  FontSize="25"/>
    </StackPanel>
</Window>
